{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        ".flatpak/**": true,
        "_build/**": true
    },
    "mesonbuild.configureOnOpen": false,
    "mesonbuild.buildFolder": "_build",
    "mesonbuild.mesonPath": "./.flatpak/meson.sh",
    "rust-analyzer.server.path": "./.flatpak/rust-analyzer.sh",
    "rust-analyzer.runnables.overrideCargo": "./.flatpak/cargo.sh",
    "rust-analyzer.runnables.cargoExtraArgs": [
        "--target-dir=_build/src"
    ],
    "rust-analyzer.files.excludeDirs": [
        ".flatpak"
    ]
}